<form action="{{#if user}}/users/edit/{{user.id}}{{else}}/users/new{{/if}}" method="POST">
  <div>
    <label>Nombre</label>
    <input type="text" name="name" value="{{user.name}}" required>
  </div>
  <div>
    <label>Email</label>
    <input type="email" name="email" value="{{user.email}}" required>
  </div>
  <div>
    <label>ContraseÃ±a</label>
    <input type="password" name="password" {{#if user}}placeholder="Dejar en blanco para no cambiar"{{/if}} {{#unless user}}required{{/unless}}>
  </div>
  <div>
    <label>Rol</label>
    <select name="role" required>
      <option value="Admin" {{#eq user.role "Admin"}}selected{{/eq}}>Admin</option>
      <option value="User" {{#eq user.role "User"}}selected{{/eq}}>User</option>
    </select>
  </div>
  <button type="submit">Guardar</button>
</form>


