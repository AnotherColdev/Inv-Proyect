<h1>Lista de Productos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
      <td>
        <a href="/products/edit/{{this.id}}">Editar</a>
        <form action="/products/delete/{{this.id}}" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/products/new">Crear Nuevo Producto</a>

